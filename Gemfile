source "https://rubygems.org"

# Use GitHub Pages gem and required plugins.  The github-pages gem
# includes Jekyll and other dependencies pinned to versions that work
# reliably on GitHub Pages.  The jekyll‑include‑cache plugin is
# required by the Minimal Mistakes theme.

gem "github-pages", group: :jekyll_plugins
gem "jekyll-include-cache", group: :jekyll_plugins
gem "jekyll-redirect-from", group: :jekyll_plugins

# HTMLProofer is used in development to verify links and images in the
# generated site. It is not part of the runtime build but helps catch
# broken references during testing.
gem "html-proofer", group: :test
