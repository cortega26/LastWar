{
  "name": "lastwar-tools",
  "version": "1.0.0",
  "description": "Last War: Survival Game tools and guides",
  "scripts": {
    "serve": "bundle exec jekyll serve -H 0.0.0.0 -P 3000 --livereload",
    "serve:legacy": "http-server . -p 3000 -c-1",
    "lighthouse": "lhci autorun --config=.lighthouserc.json",
    "perf-check": "node scripts/performance-monitor.js --check",
    "perf-report": "node scripts/performance-monitor.js --report",
    "test": "node tests/url-normalize.test.js && node tests/protein-calculator.test.js && node tests/t10-calculator.test.js && node tests/tool-card.tab.test.js && npm run perf-check",
    "generate:pages": "node scripts/generate-pages-json.js"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "http-server": "^14.1.1",
    "jsdom": "^23.0.0",
    "jquery": "^3.7.1",
    "playwright": "^1.48.0",
    "js-yaml": "^4.1.0",
    "liquidjs": "^10.13.0"
  }
}
